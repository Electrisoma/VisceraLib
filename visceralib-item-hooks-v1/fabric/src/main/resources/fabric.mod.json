{
  "schemaVersion": 1,
  "id": "visceralib_item_hooks_v1",
  "version": "${version}",
  "name": "VisceraLib Item Hooks (v1)",
  "description": "Contains hooks to help with item creation.",
  "authors": [ "${authors}" ],
  "contributors": [ "${contributors}" ],
  "contact": {
    "homepage": "${github}",
    "sources": "${github}",
    "issues": "${github}/issues"
  },
  "license": "${license}",
  "icon": "assets/visceralib_item_hooks_v1/logo.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.electrisoma.visceralib.impl.item.v1.EntrypointFabric"
    ],
    "client": [
      "net.electrisoma.visceralib.impl.item.v1.client.ClientEntrypointFabric"
    ]
  },
  "mixins": [
    "mixins/visceralib_item_hooks_v1-common.mixins.json",
    "mixins/visceralib_item_hooks_v1-fabric.mixins.json",
    "mixins/visceralib_item_hooks_v1-common.client.mixins.json",
    "mixins/visceralib_item_hooks_v1-fabric.client.mixins.json"
  ],
  "depends": {
    "visceralib_core": "*",
    "fabric-api-base": "*",
    "fabricloader": ">=${fabric}",
    "minecraft": "${minecraft}",
    "java": ">=${java}"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "parent": {
        "id": "visceralib",
        "name": "VisceraLib",
        "description": "${description}",
        "icon": "assets/visceralib_item_hooks_v1/logo.png",
        "badges": [ "library" ]
      },
      "update_checker": true
    },
    "loom:injected_interfaces": {
      "net/minecraft/class_1792": [
        "net/electrisoma/visceralib/api/item/v1/ext/VisceralItemHooks",
        "net/electrisoma/visceralib/api/item/v1/client/ext/VisceralClientItemHooks"
      ]
    }
  }
}