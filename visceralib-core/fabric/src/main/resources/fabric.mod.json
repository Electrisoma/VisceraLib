{
  "schemaVersion": 1,
  "id": "${id}_${module}",
  "version": "${version}",
  "name": "${name}-${moduleCaps}",
  "description": "Contains essential code for each ${name} module.",
  "authors": [
    "${authors}"
  ],
  "contact": {
  },
  "license": "${license}",
  "icon": "logo.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "${group}.${id}.impl.${module}.EntrypointFabric"
    ],
    "client": [
      "${group}.${id}.impl.${module}.ClientEntrypointFabric"
    ]
  },
  "mixins": [
    "${id}_${module}-common.mixins.json",
    "${id}_${module}-fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric}",
    "fabric-api-base": "*",
    "minecraft": "${minecraft}",
    "java": ">=${java}"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ],
      "parent": {
        "id": "${id}",
        "name": "${name}",
        "description": "${description}",
        "icon": "logo.png",
        "badges": [ "library" ]
      },
      "update_checker": true
    }
  }
}
